                            <TableColumn text="被引用表(父)"/>
                            <TableColumn text="删除时"/>
                            <TableColumn text="更新时"/>
                        </columns>
                    </DesignTableView>
                </Tab>
                <Tab text="选项">

                </Tab>
                <Tab text="注释">
                    <TextArea/>
                </Tab>
                <Tab text="SQL预览">
                    <SQLEditor fx:id="sqlEditor"/>
                </Tab>
            </TabPane>
            <DesignOptionBox fx:id="box"/>
        </SplitPane>
    </center>
