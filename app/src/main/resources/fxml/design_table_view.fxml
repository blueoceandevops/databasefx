    <stylesheets>
        <URL value="@/css/design_table.css"/>
        <URL value="@/css/base.css"/>
    </stylesheets>
    <top>
        <HBox BorderPane.alignment="CENTER" styleClass="top-box" fx:id="topBox">
            <Button text="保存" userData="0_0">
