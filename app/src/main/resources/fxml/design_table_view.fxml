        <SplitPane dividerPositions="0.8" orientation="VERTICAL" BorderPane.alignment="CENTER" fx:id="splitPane">
            <TabPane fx:id="tabPane">
                <Tab text="字段">
                    <DesignTableView fx:id="fieldTable">
                        <columns>
                            <TableColumn text="名"/>
                            <TableColumn text="类型"/>
                            <TableColumn text="长度"/>
                            <TableColumn text="小数点"/>
                            <TableColumn text="不是null"/>
<!--                            <TableColumn text="虚拟"/>-->
