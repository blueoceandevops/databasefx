                            <TableColumn text="注释"/>
                        </columns>
                    </DesignTableView>
                </Tab>
                <Tab text="索引">
                    <DesignTableView>
                        <columns>
                            <TableColumn text="名"/>
                            <TableColumn text="字段"/>
                            <TableColumn text="类型"/>
                            <TableColumn text="方法"/>
                            <TableColumn text="注释"/>
                        </columns>
                    </DesignTableView>
                </Tab>
                <Tab text="外键">
                    <DesignTableView>
                        <columns>
                            <TableColumn text="名"/>
